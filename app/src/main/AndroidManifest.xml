<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.artmarketplace">

    <!-- Needed for Firebase to communicate with the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArtMarketplace">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity" />
        <activity android:name=".CustomerHomeActivity" />
        <activity android:name=".ProviderHomeActivity" />
        <activity
            android:name=".ui.buyer.SearchDemoActivity"
            android:exported="true" />

    </application>
</manifest>
