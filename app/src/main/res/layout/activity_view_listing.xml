<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/vl_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />

            <TextView
                android:id="@+id/vl_updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text=""
                android:textSize="12sp"
                android:textColor="#666"/>
        </LinearLayout>

        <!-- Image -->
        <ImageView
            android:id="@+id/vl_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"/>

        <!-- Title + Price -->
        <TextView
            android:id="@+id/vl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Title" />

        <TextView
            android:id="@+id/vl_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:text="$0.00"
            android:layout_marginTop="4dp" />

        <!-- Tags -->
        <TextView
            android:id="@+id/vl_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            android:text="" />

        <!-- Seller row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="#F6F6F6">

            <TextView
                android:id="@+id/vl_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vl_seller_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(email)"
                android:autoLink="email"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/vl_email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email seller"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/vl_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="" />

    </LinearLayout>
</ScrollView>
